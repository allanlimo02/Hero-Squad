{{#partial "content"}}
        <form action="">

          <label for="heroName">Input Hero Name</label>
          <input type="text" name="heroName" id="heroName" class="form-control"><br>
          <label for="heroAge">Input hero Age</label>
          <input type="number" name="heroAge" id="heroAge" class="form-control">
          <label for="specialPower">Select Hero's Special Power</label>
          <select name="specialPower" id="specialPower" class="form-control">
            <option value=""></option>
            <option value="electricshock">Absorb Electric Shock</option>
            <option value="swimming">Swim for 10 Days</option>
            <option value="readdreams">Interprate Dreams</option>
            <option value="sniper"> Snipper</option>
          </select>
          <label for="weakness">Select Hero's Weakness</label>
          <select name="weakness" id="weakness" class="form-control">
              <option value=""></option>
              <option value="darkness">Darknesss</option>
              <option value="storm">Storm</option>
              <option value="sunlight">Sunlight</option>
              <option value="flowers">Flowers</option>

          </select>
          <br><br><br>
         <button type="submit" class="btn btn-success">Submit form</button>
         <button type="reset" class="btn btn-danger">Clear inputs</button>
            <br><br><br>

        </form>
{{/partial}}
{{> layout.hbs}}